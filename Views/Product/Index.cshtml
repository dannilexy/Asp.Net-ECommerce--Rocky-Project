@model IEnumerable<RockyProject.Models.Product>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Upsert" class="btn btn-primary"><i class="fa fa-plus-square"></i> Create New Product</a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="50%">
                            @product.Name
                        </td>
                        <td width="30%">
                            @product.Price
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a  asp-action="UpSert" asp-route-id="@product.Id" class="btn btn-success"><i class="fa fa-edit"></i>  </a>
                                <a  asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><i class="fa fa-trash-alt"></i></a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Products Exists.</p>
    }

</div>
